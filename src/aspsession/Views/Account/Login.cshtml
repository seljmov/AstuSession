@model aspsession.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход в систему";
}

<div class="container col-8 col-md-4 mt-5  flex-column justify-content-center align-items-center">
	<div class="d-flex flex-column justify-content-center align-items-center">
		<h2 class="mt-2">ASP SESSION</h2>
		<h4 class="mt-2">Вход в систему</h4>
	</div>
	<hr class="mb-4" />

	<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
		<div class="validation" asp-validation-summary="ModelOnly"></div>
		<div>
			<div class="form-group mb-3">
				<label asp-for="Email" class="form-label">Введите Email: </label>
				<input type="text" asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" />
			</div>
			<div class="form-group mb-4">
				<label asp-for="Password" class="form-label">Введите пароль: </label>
				<input type="password" asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" />
			</div>
			<div class="form-group">
				<input type="submit" value="Войти" class="btn btn-primary" style="width: 100%;" />
			</div>
		</div>
	</form>
</div>