@model IList<aspsession.ViewModels.Shared.SheetViewModel>

@using System.Text.Json
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Мои ведомости";
    Layout = "_TeacherLayout";

    var needConfirmSheets = Model.Where(x => x.Status == "Отправлена преподавателю").ToList();
    var parameters = new RouteValueDictionary();

    for (int i = 0; i < needConfirmSheets.Count; ++i)
    {
        parameters.Add("sheets[" + i + "]", needConfirmSheets[i]);
    }
}

@if (Model.Where(sheet => sheet.Status == "Отправлена преподавателю").ToList().Count != 0)
{
    <div class="alert alert-warning mb-4" role="alert">
        <h4 class="mb-2">Вам отправлены новые ведомости. Подтвердите получение!</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Номер ведомости</th>
                <th>Семестр</th>
                <th>Год</th>
                <th>Тип</th>
                <th>Группа</th>
                <th>Дисциплина</th>
                <th>Статус ведомости</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sheet in Model.Where(x => x.Status == "Отправлена преподавателю"))
            {
                <tr>
                    <td>@sheet.Id</td>
                    <td>@sheet.Term</td>
                    <td>@sheet.Year</td>
                    <td>@sheet.Type</td>
                    <td>@sheet.Group</td>
                    <td>@sheet.Discipline</td>
                    <td>@sheet.Status</td>
                </tr>
            }
            </tbody>
    </table>

    <a href='@Url.Action("ConfirmSheets", "Teacher", new { forms = JsonConvert.SerializeObject(needConfirmSheets) }, null)' class="btn btn-success">
        <i class="fas fa-check"></i> Подтвердить получение
    </a>
    </div>
}

<div class="action-area">
    <h3>Мои ведомости</h3>
</div>

@if (Model.Where(sheet => sheet.Status != "Отправлена преподавателю").ToList().Count == 0)
{
    <p><em>Список ведомостей пуст...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Номер ведомости</th>
                <th>Семестр</th>
                <th>Год</th>
                <th>Тип</th>
                <th>Группа</th>
                <th>Дисциплина</th>
                <th>Статус ведомости</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sheet in Model.Where(x => x.Status != "Отправлена преподавателю"))
            {
                <tr>
                    <td>@sheet.Id</td>
                    <td>@sheet.Term</td>
                    <td>@sheet.Year</td>
                    <td>@sheet.Type</td>
                    <td>@sheet.Group</td>
                    <td>@sheet.Discipline</td>
                    <td>@sheet.Status</td>
                    <td>
                        <div class="action-area">
                            <a href='@Url.Action("FillSheet", "Teacher", new { id = sheet.Id }, null)' class="btn btn-outline-success action-icon" title="Нажмите, чтобы заполнить ведомость.">
                                <i class="fas fa-file-signature"></i>
                            </a>
                            <a href='@Url.Action("DetailsSheet", "Dean", new { id = sheet.Id }, null)' class="btn btn-outline-primary action-icon" title="Нажмите, чтобы посмотреть подробную информацию о ведомости.">
                                <i class="fas fa-info"></i>
                            </a>
                            <a href='@Url.Action("EditSheet", "Dean", new { id = sheet.Id }, null)' class="btn btn-outline-secondary action-icon" title="Нажмите, чтобы редактировать ведомость.">
                                <i class="fas fa-pen"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
    </table>
}