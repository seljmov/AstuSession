@model User

@{
    ViewData["Title"] = "Создать пользователя";
    Layout = "_AdminLayout";
}

<div style="width: 640px;display: block;margin-left: auto;margin-right: auto;">
    <h4 class="mt-4 mb-2">Добавить нового пользователя</h4>

    <form asp-action="CreateUser" asp-controller="Admin">
        <div class="form-group mb-3">
            <input type="hidden" asp-for="@Model.Id" />
            <label asp-for="Name">ФИО</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RoleId" class="form-label">Роль</label>
            <select asp-for="RoleId" class="form-select">
                <option value="3">Преподаватель</option>
                <option value="2">Сотрудник деканата</option>
                <option value="1">Администратор</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>