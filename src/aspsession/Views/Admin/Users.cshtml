@model IList<aspsession.ViewModels.Admin.UserViewModel>

@{
    ViewData["Title"] = "Пользователи";
}

<div id="PlaceHolderHere"></div>

<div class="action-area">
    <button class="btn btn-outline-success action-icon" data-toggle="ajax-modal" data-target="#addUser" data-url="@Url.Action("Create")">
        <i class="fas fa-plus-circle" title="Нажмите, чтобы добавить нового пользователя."></i>
    </button>
    <h3>Список пользователей системы</h3>
</div>

@if (Model == null)
{
    <p><em>Список пользователей пуст...</em></p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>ФИО</th>
            <th>Роль</th>
            <th>Email</th>
            <th>Пароль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>
                    <div class="action-area">
                        <div class="btn btn-outline-primary action-icon">
                            <i class="fas fa-eye" title="Удерживайте, чтобы увидеть пароль."></i>
                        </div>
                        <div class="btn btn-outline-secondary action-icon">
                            <i class="fas fa-pen" title="Нажмите, чтобы редактировать информацию о пользователе."></i>
                        </div>
                        <div class="btn btn-outline-danger action-icon">
                            <i class="fas fa-trash" title="Нажмите, чтобы удалить пользователя."></i>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
</table>
}