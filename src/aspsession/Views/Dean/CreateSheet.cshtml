@model aspsession.ViewModels.Dean.CreateSheetViewModal

@{
    ViewData["Title"] = "Создать ведомость";
    Layout = "_DeanLayout";
}

<div style="width: 640px;display: block;margin-left: auto;margin-right: auto;">
    <h4 class="mt-4 mb-2">Добавить новую ведомость</h4>

    <form asp-action="CreateSheet" asp-controller="Dean">
        <div class="form-group mb-3">
            <label asp-for="TermNumber">Семестр</label>
            <input asp-for="TermNumber" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Year">Год</label>
            <input asp-for="Year" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="SelectedType" class="form-label">Тип проверки знаний</label>
            <select id="SelectedTypeId" asp-for="SelectedType" asp-items="Model.Types" class="form-select"></select>
        </div>
        <div class="flex-row mb-3">
            <label asp-for="SelectedGroup" class="form-label">Группа</label>
            <select id="SelectedGroupId" asp-for="SelectedGroup" asp-items="Model.Groups" class="form-select"></select>
        </div>
        <div class="mb-3">
            <label asp-for="SelectedDiscipline" class="form-label">Дисциплина</label>
            <select id="SelectedDisciplineId" asp-for="SelectedDiscipline" asp-items="Model.Disciplines" class="form-select"></select>
        </div>
            <div class="mb-4">
            <label asp-for="SelectedTeacher" class="form-label">Преподаватель</label>
            <select id="SelectedTeacherId" asp-for="SelectedTeacher" asp-items="Model.Teachers" class="form-select"></select>
        </div>
        
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        
        <div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#SelectedGroupId").select2();
            $("#SelectedDisciplineId").select2();
            $("#SelectedTeacherId").select2();
        });
    </script>
}